@{
    ViewBag.Title = "Index";
}

<h2>Početni view za korisnike</h2>
@if (Model.Length == 0)
{ 
    @Html.ActionLink("Ulogiraj se", "LogIn", "HomeUser")
}
else
{
    <p>Ulogiran si kao @Model</p>
    <p>@Html.ActionLink("Odlogiraj se", "Logout", "HomeUser")</p>
    <p>@Html.ActionLink("Odi na svoju stranicu", "Index", "Manager")</p>
}
